{
    "moduleFileExtensions": [
        "js",
        "json",
        "vue"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
        "customExportConditions": [
            "node",
            "node-addons"
        ]
    },
    "transform": {
        "^.+\\.vue$": "@vue/vue3-jest",
        "^.+\\js$": "babel-jest"
    },
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
        "**/test/**/*.test.js"
    ],
    "collectCoverage": false
}